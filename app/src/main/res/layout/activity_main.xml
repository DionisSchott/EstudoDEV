<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/sublinhado"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/underline"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/sublinhado2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sublinhado2"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/underline"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/sublinhado"
        app:layout_constraintEnd_toStartOf="@id/sublinhado3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sublinhado3"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/underline"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/sublinhado4"
        app:layout_constraintStart_toEndOf="@id/sublinhado2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sublinhado4"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/underline"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sublinhado3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clique"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clique"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clique"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clique"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3" />



</androidx.constraintlayout.widget.ConstraintLayout>


